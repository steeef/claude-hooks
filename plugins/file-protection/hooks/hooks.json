{
  "description": "File protection (CLAUDE.md, large file warnings)",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/hooks/file_hook.py"
          }
        ]
      }
    ]
  }
}
