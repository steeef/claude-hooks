{
  "description": "Command safety checks for dangerous operations (rm, kubectl, terraform)",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/hooks/command_hook.py"
          }
        ]
      }
    ]
  }
}
